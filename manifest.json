{
  "manifest_version": 3,
  "name": "Gemini Auto-Pro Switcher",
  "version": "1.0",
  "description": "Automatically switches Gemini to the Advanced/Pro model.",
  "permissions": ["scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["https://gemini.google.com/*"],
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}